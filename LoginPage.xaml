<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingApp.LoginPage">

    <VerticalStackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Login or Register" FontSize="Large" HorizontalOptions="Center" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Login" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>
